{
    "name": "svelte-app",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "start": "sirv public --no-clear -s",
        "build:css": "postcss ./src/css/tailwind.css -o ./public/src/css/main.css",
        "build:css-prod": "NODE_ENV=production postcss src/css/tailwind.css -o public/src/css/main.css"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^17.0.0",
        "@rollup/plugin-node-resolve": "^11.0.0",
        "rollup": "^2.3.4",
        "rollup-plugin-css-only": "^3.1.0",
        "rollup-plugin-livereload": "^2.0.0",
        "rollup-plugin-svelte": "^7.0.0",
        "rollup-plugin-terser": "^7.0.0",
        "svelte": "^3.0.0"
    },
    "dependencies": {
        "@tailwindcss/jit": "^0.1.18",
        "autoprefixer": "^10.3.6",
        "postcss-cli": "^9.0.1",
        "sirv-cli": "^1.0.0",
        "svelte-routing": "^1.6.0",
        "tailwindcss": "^2.2.16",
        "win-node-env": "^0.4.0"
    }
}